<div class="container">
  <h1>Welcome to <br></h1>
  <h1><%= @venue.name %></h1>
  <h3 class="mt-2"> <%= @venue.category%></h3>
  <h4 class="mt-2" id="venue-address"> <%= @venue.address%></h4>
  <br>
  <h5><strong> Description </strong></h5>
  <h5>Lorem ipsum dolor sit amet consectetur adipisicing elit. A voluptate ab nulla quae? Quo laborum saepe fugiat dolores odit natus quaerat obcaecati, dolore sit aperiam nisi enim repudiandae dicta iusto?</h5>
  <br>
  <h6 class="mt-2 text-right"> <%= link_to "Back to map", root_path, class: "btn btn-primary" %> <br>
  <%= link_to "Request Booking",  new_venue_booking_path(@venue), class: "btn btn-primary" %>
  <h6 class ="mt-3 text-right">OR</h6>
  <h6 class="mt-2 text-right"> <%= link_to "Get there", "", class: "btn btn-primary", id: "sweet-alert"%></h6>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @venue.photos[0].key, crop: :fill, class:"d-block carousel-picture" %>
    </div>
    <div class="carousel-item">
      <%= cl_image_tag @venue.photos[1].key, crop: :fill, class:"d-block carousel-picture" %>
    </div>
    <div class="carousel-item">
      <%= cl_image_tag @venue.photos[2].key, crop: :fill, class:"d-block carousel-picture" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
