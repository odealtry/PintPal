<div class="container">
  <h3 class="text-center m-3"><%= @user.first_name %>'s shortlist</h3>
  <div class="shortlist-container">
    <% if @user_bookings.empty? %>
      <h5 class="m-5">Nothing here</h5>
        <p><%= link_to "Find a venue", root_path, class: "btn" %></p>
        <p class="white-p">OR</p>
        <p><%= link_to "Your bookings", bookings_path, class: "btn" %></p>
    <% else %>
      <% @user_bookings.each do |booking| %>
        <%= render partial: "shared/list_card", locals: { booking: booking } %>
      <% end %>
    <% end %>
    <br>
    <%= link_to "Back to map", root_path, class: "btn" %></h6>
  </div>
</div>
