<%= simple_form_for [@venue, @booking] do |f| %>
    <%= f.input :start, html5: true %>
    <%= f.input :length, collection: 1..4, label: "Duration (hours)" %>
    <%= f.input :party_size, collection: 1..6 %>
    <% if @booking.new_record? %>
      <%= f.submit "Request booking", class: "btn mt-3" %>
    <% else %>
      <%= f.submit "Update booking", class: "btn" %>
    <% end %>
  <% end %>
