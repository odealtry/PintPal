<div class="shortlist-card">
  <%= booking.start.strftime("%H:%M %d/%m/%y") %>
  <%= booking.length %> hour(s)
  <%= booking.venue.name %>
  <%= link_to "View", venue_booking_path(booking.venue, booking), class: "btn" %>
  <div class="chat-button">
  <%= link_to venue_booking_chatroom_path(booking.venue, booking, booking.chatroom) do %>
      <i class="fas fa-comments"></i>
  <% end %>
</div>
</div>
